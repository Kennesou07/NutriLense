<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_height="150dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/most_viewed_img"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/sample_image"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/most_viewed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="San Marino"
            android:layout_toRightOf="@+id/most_viewed_img"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/baloo"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@+id/most_viewed_title"
            android:layout_toRightOf="@+id/most_viewed_img"
            android:layout_marginLeft="10dp"
            android:rating="5" />
        <TextView
            android:id="@+id/most_viewed_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum Dolor Washineinei"
            android:textSize="14sp"
            android:layout_below="@id/most_viewed_title"
            android:layout_toRightOf="@id/most_viewed_img"
            android:padding="10dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>